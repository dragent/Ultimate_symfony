{% extends "base.html.twig" %}

{% block title %}
	Accueil
{% endblock %}


{% block body %}
	<h1>Nos produits phares</h1>
	<div class="row">
		{% for p in products %}
			<div class="col">
				<div class="card">
					<img src="{{p.mainPicture}}" class="img-fluid" alt="image produit 1">
					<div class="card-body">
						<h4 class="card-title">{{p.name}}
							({{p.price / 100}}
							&euro;)</h4>
						<span class="badge bg-info">{{p.category.name}}</span>
						<p class="card-text">{{p.shortDescription}}</p>
						<a href="{{path('product_show',{'category_slug':p.category.slug,'product_slug':p.slug})}}" class="btn btn-primary btn-sm">Détail</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<hr>
	<h2>Un service irréprochable</h2>
	<p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Excepturi rerum sequi perferendis libero, tenetur nam!</p>

	<div class="row">
		{% include "shared/_assurance.html.twig"  with {
		'color': 'primary',
		'icon': 'fas fa-truck',
		'text': "Lorem ipsum dolor sit, amet consectetur adipisicing elit. Placeat tempore quod laudantium tenetur pariatur beatae."
		}
		%}
		{% include "shared/_assurance.html.twig"  with {
		'color': 'success',
		'icon': 'fas fa-check',
		'text': "Lorem ipsum dolor sit, amet consectetur adipisicing elit. Placeat tempore quod laudantium tenetur pariatur beatae."
		}
		%}
		{% include "shared/_assurance.html.twig"  with {
		'color': 'warning',
		'icon': 'fas fa-lock',
		'text': "Lorem ipsum dolor sit, amet consectetur adipisicing elit. Placeat tempore quod laudantium tenetur pariatur beatae."
		}
		%}
	</div>
{% endblock %}
